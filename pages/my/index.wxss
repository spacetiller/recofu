/* pages/my/index.wxss */
@import "../../static/css/common.wxss";


.infoArea {
	padding: 40rpx 0rpx 40rpx 20rpx;
}
.infoArea > image {
	width: 120rpx;
	height: 120rpx;
	border-radius: 100rpx;
}
.nameArea {
	width: 50%;
	margin-left: 30rpx;
}
.nickname {
	margin-bottom: 10rpx;
}

.phoneArea {
	margin: 0rpx 20rpx 40rpx 20rpx;
	border-top: 1px solid #E5E5E5;
	border-bottom: 1px solid #E5E5E5;
	padding: 20rpx 0rpx;
	vertical-align: center;
}
.phoneBtn {
	width: 200rpx;
	height: 60rpx;
	line-height: 60rpx;
	border-radius: 100rpx;
	background-color: rgba(229, 28, 35, 1);
	color: rgba(255, 255, 255, 1);
	text-align: center;
	font-family: Microsoft Yahei;
		
}

.listarea {
	padding: 0rpx 20rpx;
}

.mylist {
	padding: 30rpx 0rpx 30rpx 0rpx;
	margin: 0rpx;
	border-top: 1rpx solid rgba(0,0,0,0.1);

}
.mylist image {
	width: 45rpx;
	height: 45rpx;
	margin-right: 20rpx;
}
.arrow{
	width: 10px;
	height: 10px;
	border-top: 2px solid #999;
	border-right: 2px solid #999;
	position: relative;
	right: 20rpx;
	transform: rotate(45deg);
}
.lastlist {
	border-bottom: 1rpx solid rgba(0,0,0,0.1);
	margin-bottom: 40rpx;
}