/* pages/shop/index.wxss */
@import "../../static/css/common.wxss";

/*---------------- 总体 ---------------*/

.container {
  overflow: hidden;
  height: 100%;
  width: 100%;
}

.select-tab {
  overflow: hidden;
  height: 100%;
  font-size: 32rpx;
  background-color: #fff;
  /*background-color: #fff;
  border-top:1px solid #FFFFFF;
  border-bottom:1px solid #FFFFFF;*/
}

.select-tab view {
  display: flex;
  align-items: center;
  padding: 30rpx 0rpx 10rpx 0rpx;
}

.select-tab .selectText.inactive {
  color: inherit;
}

.select-tab .selectText.active {
  color: #e51c23;
}

.select-tab .selectLine {
  width: 40%;
  height: 1rpx;
  margin-top: 20rpx;
}

.select-tab .selectLine.inactive {
  border-bottom: 6rpx solid inherit;
}

.select-tab .selectLine.active {
  border-bottom: 6rpx solid #e51c23;
}

/*---------------- tab1 ---------------*/

.page {
  width: 100%;
  padding: 0rpx 0rpx;
}

.page-body {
  padding: 0rpx 0rpx;
}

.select-page {
  width: 100%;
  padding: 0rpx 0rpx;
}

.page1 {
  padding: 0rpx 40rpx;
}

.scoreInput {
  margin-top: 60rpx;
  padding: 15rpx 40rpx;
  font-size: 32rpx;
  border: 1px solid #bec2c9;
  border-radius: 100rpx;
}

.scoreBtn {
  width: 100%;
  background-color: #e51c23;
  margin-top: 40rpx;
  padding: 10rpx;
  font-size: 32rpx;
  color: #fff;
  border: 1px solid #bec2c9;
  border-radius: 100rpx;
}

.example {
  margin-top: 100rpx;
}

.weixinText {
  margin-top: 60rpx;
}

.alipayText {
  margin-top: 40rpx;
}

.payImage {
  width: 100%;
}

/*------------ tab1 dialog -------------*/

.changedPage {
  overflow: hidden;
  height: 100%;
  width: 100%;
  padding: 30rpx 0rpx;
}

.showText {
  text-align: center;
  margin: 106rpx 100rpx;
}

.gotoBtn {
  width: 200rpx;
  height: 60rpx;
  margin-top: 106rpx;
  border: 1px solid #aaa;
  border-radius: 100rpx;
  line-height: 1.5;
}

/*---------------- tab2 ---------------*/

.page2 {
  padding: 0rpx 20rpx;
}

.poster {
  width: 100%;
  height: 280rpx;
	margin-top: 30rpx;
}

.title {
  height: 95rpx;
  width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
	margin-top: 20rpx;
	font-size: 32rpx;
}
.price {
	padding-top: 0;
	height: 95rpx;
}
.provider {
	margin: 28rpx 0;
}

